{
    "files.autoSave": "onFocusChange",
	"files.trimTrailingWhitespace": true,

    "editor.renderWhitespace": "boundary",
    "editor.minimap.enabled": false,
    "editor.scrollBeyondLastLine": false,
    "editor.multiCursorModifier": "alt",
    "editor.renderIndentGuides": true,
    "editor.wordWrap": "on",
    "editor.fontFamily": "'Hack', 'Source Code Pro', 'Droid Sans Mono', 'monospace', monospace, 'Droid Sans Fallback'",
    "editor.smoothScrolling": true,
    "editor.fontSize": 11,
	"editor.detectIndentation": false,
	"editor.insertSpaces": false,

    "[python]": {
        "editor.insertSpaces": true,
        "editor.rulers": [
            79
        ]
    },

    "[css]": {
        "editor.insertSpaces": true,
        "editor.tabSize": 2
    },

    "[html]": {
        "editor.insertSpaces": true,
        "editor.tabSize": 2
    },

    "[javascript]": {
        "editor.insertSpaces": true,
        "editor.tabSize": 2
    },

    "[rust]": {
        "editor.insertSpaces": true,
	},

	"workbench.statusBar.feedback.visible": false,
	"workbench.activityBar.visible": true,
    "workbench.startupEditor": "none",
    "workbench.iconTheme": "material-icon-theme",
    "workbench.colorTheme": "Monokai Pro",
	"workbench.colorCustomizations": {
		"statusBar.background": "#2d2a2e",
		"activityBar.background": "#2d2a2e"
	},

    "diffEditor.ignoreTrimWhitespace": true,

    "explorer.confirmDragAndDrop": false,
    "explorer.openEditors.visible": 0,

    "extensions.ignoreRecommendations": true,

    "git.confirmSync": false,
    "git.enableSmartCommit": true,

    "python.pythonPath": "/Users/ioan/miniconda3/bin/python",

	"breadcrumbs.enabled": false,

    "window.title": "${activeEditorLong}",
	"window.zoomLevel": -0.3,

    "material-icon-theme.showWelcomeMessage": false,
    "material-icon-theme.showReloadMessage": false,

	"liveServer.settings.donotShowInfoMsg": true,
}
