function cipssh() {
  if [ "$*" == "" ]; then
    ssh ionescu@remote.cip.ifi.lmu.de
  else
    ssh -X -o 'ProxyCommand ssh -W %h:%p ionescu@remote.cip.ifi.lmu.de' ionescu@"$1"
  fi
}

# create a new directory and enter it
function mk() {
  mkdir -p "$@" && cd "$@"
}

# change to directory and list content
function cdl() {
  cd "$1" && l
}

# switch keyboard layout between us and de
function keymaps() {
  if (setxkbmap -print | grep xkb_symbols | grep us); then
    setxkbmap de
  else
    setxkbmap us
  fi
}

# save man page as pdf
function manpdf() {
  man -t $@ | ps2pdf - "$@.pdf"
}

